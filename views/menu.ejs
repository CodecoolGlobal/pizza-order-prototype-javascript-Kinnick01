<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Our pizzas</title>
  <!-- <link rel="icon" href="https://img.icons8.com/office/344/pizza.png"> -->
  <link rel="stylesheet" href="/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@100;400;700&display=swap" rel="stylesheet">
  <script type="text/javascript" src="/script.js" defer></script>
</head>

<body>
  <div class="menu-navigation">
    <ul class="menu-navbar">
      <img class="navbar-logo" src="https://img.icons8.com/office/344/pizza.png" alt="Pizza logo">
      <li class="navbar-buttons"><a href="/">Home</a></li>
      <li class="navbar-buttons"><a href="/pizza/list">Menu</a></li>
      <li class="navbar-buttons"><a href="/myorder">My order</a></li>
    </ul>
  </div>
  <div id="menu-container">
    <% pizzasList.pizzas.forEach(function(pizza) { %>
      <div class="menu-item-container">
        <img class="menu-item-img" src="/<%=pizza.name%>.png">
        <form id="<%= pizza.id%>" class="menu-item-form" action="http://127.0.0.1:9001/myorder" method="post">
          <h1>
            <%= pizza.name %>
          </h1>
          <h2>
            <%= pizza.ingredients %>
          </h2>
          <h3>allergens <%= pizza.allergens %>
          </h3>
          <h4>price <%= pizza.price %>
          </h4>
          <div class="input-container">
            <input name="pizza" value="<%= pizza.name%>" type="hidden">
            <input name="price" value="<%= pizza.price%>" type="hidden">
            <input class="input-field" name="number" type="number" value="1" min="1">
            <button type="submit" class="add-to-cart">Add to cart</button>
          </div>
        </form>
      </div>
      <% }); %>
  </div>
  <form id="pizza-filter" action="http://127.0.0.1:9001/filteredPizza" method="get">

  </form>
  <div id="menu-allergen-container">
    <button id="menu-show-allergens">Mamma Mia! You have allergies? Click here to filter our menu by allergens!</button>
    <div id="menu-allergen-container-checkboxes">
    </div>
  </div>
  <div class="menu-bgrnd">
    <img id="menu-bgrnd-img" src="/menu_bgrnd.jpg">
  </div>

</body>


</html>