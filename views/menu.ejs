<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order your pizza</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@100;400;700&display=swap" rel="stylesheet">
</head>

<body>
  <div class="menu-navigation">
    <ul class="menu-navbar">
      <li class="navbar-buttons"><a href="/">Home</a></li>
      <li class="navbar-buttons"><a href="/pizza/list">Menu</a></li>
      <li class="navbar-buttons"><a href="/myorder">My order</a></li>
    </ul>
  </div>
  <div id="menu-container">
    <% pizzasList.pizzas.forEach(function(pizza) { %>
      <div class="menu-item-container">
        <img class="menu-item-img" src="/<%=pizza.name%>.png">
        <form id="<%= pizza.id%>" class="menu-item-form" action="http://127.0.0.1:9001/myorder" method="post">
          <h1>
            <%= pizza.name %>
          </h1>
          <h2>
            <%= pizza.ingredients %>
          </h2>
          <h3>allergens <%= pizza.allergens %>
          </h3>
          <h4>price <%= pizza.price %>
          </h4>
          <input name="pizza" value="<%= pizza.id%>" type="hidden">
          <input name="number" type="number" value="1" min="1">
          <button type="submit" class="add-to-cart">Add to cart</button>
        </form>
      </div>
      <% }); %>
    </div>
    
    <button onclick="<%showAllergens()%>">You have allergies? Mamma Mia</button>
    
    <form id="pizza-filter" action="http://127.0.0.1:9001/filteredPizza" method="get">
      
    </form>
    <div class="menu-bgrnd">
      <img id="menu-bgrnd-img" src="/menu_bgrnd.jpg">
    </div>
    <%function showAllergens() {%>
    <%pizzasList.allergens.forEach(function(allergen) {%>
        <div>
          <label for="<%=allergen.id%>"><%=allergen.name%></label>
        <input type="checkbox" id="<%=allergen.id%>">
        </div>
      <%});%>
   <%};%>
  </body>
  

</html>